}
public static void pizza()
{
System.out.println("\f");
Scanner a=new Scanner(System.in);
System.out.println("Choose the option number");
System.out.println("1.Margherita");
System.out.println("2.Farmhouse");
System.out.println("3.Chicken Tandoori");
System.out.println("4.Mushroom Tandoori");
System.out.println("5.Paneer Tandoori");
int b=a.nextInt();
System.out.println("That would be $45 each");
System.out.println("How many pizzas do you want?");
int c=a.nextInt();
ffoodcourt[0]=c*45+ffoodcourt[0];
a.close();
Scanner e=new Scanner(System.in);
System.out.println("Do you want any extra topping?If yes, name the topping.");
String f=e.nextLine();
System.out.println("Any Special Request, if yes then directly type it and if
no,just put a dash and press enter");
String g=e.nextLine();
System.out.println("Do you want anything else");
String h=e.nextLine();
if(h.equalsIgnoreCase("yes"))
{
System.out.println("Please choose the option number");
System.out.println("1.Italian Menu");
System.out.println("2.Main Menu");
int i=e.nextInt();
if(i==1)
{
italian();
}
else if(i==2)
{
foodcourt();
}
else
{
System.out.println("Please choose a valid option number");
}
}
}
