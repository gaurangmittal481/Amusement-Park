}
}
Scanner h=new Scanner(System.in);
System.out.println("Do you want anything else");
String i=h.nextLine();
if(i.equalsIgnoreCase("yes"))
{
System.out.println("PLease choose the option number");
System.out.println("1.Chinese menu");
System.out.println("2.Main menu");
int j=a.nextInt();
if(j==1)
{
chinese();
}
else if(j==2)
{
foodcourt();
}
else
{
System.out.println("Please enter an appropriate option");
}
}
}
