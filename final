static String
foodcourt[]={"Italian","Burger","Chinese","Cafes","Indian","FOODCOURT"};
static int ffoodcourt[]=new int[6];
public static void foodcourt()
{
System.out.println("\f");
System.out.println("Hello sir, we have a wide variety of cuisines available with
us... Please choose the desired option number");
System.out.println("1.Italian");
System.out.println("2.Burger");
System.out.println("3.Chinese");
System.out.println("4.Cafes");
System.out.println("5.Indian");
System.out.println("6.Go back");
Scanner a=new Scanner(System.in);
int b=a.nextInt();
switch(b)
{
case 1:
italian();
break;
case 2:
burger();
break;
case 3:
chinese();
break;
case 4:
cafes();
break;
case 5:
indian();
break;
case 6:
System.out.println("\f");
break;
default:
System.out.println("Sorry, this option is invalid");
}
}
public static void italian()
