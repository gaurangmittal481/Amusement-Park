public static void main()
{
Scanner a=new Scanner(System.in);
System.out.println(" DDDDDDDDDDD EEEEEEEEEEEE L L
L L A");
System.out.println(" D DDDDDDD D E EEEEEEEEEE L L
L L A A A");
System.out.println(" D D D D E E L L L L A
A A A");
System.out.println(" D D D D E EEEEEE L L L L
A A A A");
System.out.println(" D D D D EEEEEEEE L L L L
A A A A");
System.out.println(" D D D D E EEEEEE L L L L
A AAAAAAAA A");
System.out.println(" D D D D E E L L L L A
AAAAAAAA A");
System.out.println(" D D D D E E L L L L A A
A A");
System.out.println(" D DDDDDD D E EEEEEEEEEE L
LLLLLLLLL L LLLLLLLLL A A A A");
System.out.println(" DDDDDDDDDD EEEEEEEEEEEE
LLLLLLLLLLL LLLLLLLLLLL A A A A");
System.out.print("\n"+"\n"+"\n");
System.out.println("
WELCOME!WELCOME!WELCOME");
System.out.println(" TO THE WORLD OF
ADVENTURES");
System.out.println("Please choose the desired option number");
System.out.println("1.Go to Della Adventures");
System.out.println("2.Go to Ocean Park");
System.out.println("3.Go to the Food Court");
int b=a.nextInt();
switch(b)
{
case 1:
dellaadventures();
break;
case 2:
oceanpark();
break;
case 3:
foodcourt();
break;
default:
System.out.println("Please choose the appropriate option number");
}
for(int i=-1;i<0;i--)
{
System.out.println("Please choose the desired option number");
System.out.println("1.Go to Della Adventures");
System.out.println("2.Go to Ocean Park");
System.out.println("3.Go to the Food Court");
System.out.println("4.Exit");
int c=a.nextInt();
switch(c)
{
case 1:
dellaadventures();
break;
case 2:
oceanpark();
break;
case 3:
foodcourt();
break;
case 4:
bill();
break;
default:
System.out.println("Please choose the appropriate option number");
}
}
}
public static void bill()
{
System.out.println("\f");
System.out.println("DELLA ADVENTURES BILL");
if(aa[0]>0)
{
System.out.println(a[0]+"\t$"+aa[0]);
}
if(aa[1]>0)
{
System.out.println(a[1]+"\t$"+aa[1]);
}
if(aa[2]>0)
{
System.out.println(a[2]+"\t$"+aa[2]);
}
if(aa[3]>0)
{
System.out.println(a[3]+"\t$"+aa[3]);
}
if(aa[4]>0)
{
System.out.println(a[4]+"\t$"+aa[4]);
}
if(aa[5]>0)
{
System.out.println(a[5]+"\t$"+aa[5]);
}
if(aa[6]>0)
{
System.out.println(a[6]+"\t$"+aa[6]);
}
aa[7]=aa[0]+aa[1]+aa[2]+aa[3]+aa[4]+aa[5]+aa[6];
System.out.println("TOTAL"+"\t$"+aa[7]);
System.out.println("-----------------------------------------------------------------------------
------");
System.out.println("-----------------------------------------------------------------------------
------");
System.out.println("OCEAN PARK BILL");
if(bb[0]>0)
{
