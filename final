public static void italiancombo()
{
System.out.println("\f");
Scanner a=new Scanner(System.in);
System.out.println("Hello, What do you want for main course: pasta or pizza");
String b=a.nextLine();
System.out.println("How Many combos do you want?");
int c=a.nextInt();
for(int aa=1;aa<=c;aa++)
{
System.out.println("COMBO "+aa+":");
if(b.equalsIgnoreCase("pasta"))
{
System.out.println("Please choose the desired option number");
System.out.println("1.Carbonara");
System.out.println("2.Bolognese");
System.out.println("3.Arrabiata");
System.out.println("4.Baked Mac n Cheese");
int d=a.nextInt();
System.out.println("Any Special Request, if yes then directly type it and if
no,just put a dash and press enter");
String e=a.nextLine();
}
if(b.equalsIgnoreCase("pizza"))
{
System.out.println("Choose the option numbe r");
System.out.println("1.Margherita");
System.out.println("2.Farmhouse");
System.out.println("3.Chicken Tandoori");
System.out.println("4.Mushroom Tandoori");
System.out.println("5.Paneer Tandoori");
int f=a.nextInt();
a.close();
Scanner g=new Scanner(System.in);
System.out.println("Do you want any extra topping?If yes, name the
topping.");
String h=g.nextLine();
System.out.println("Any Special Request, if yes then directly type it and if
no,just put a dash and press enter");
String i=g.nextLine();
g.close();
}
Scanner j=new Scanner(System.in);
System.out.println("What do you want:sides or salads");
String k=j.nextLine();
if(k.equalsIgnoreCase("sides"))
{
System.out.println("Please choose the desired option number");
System.out.println("1.Garlic Bread");
System.out.println("2.Cheese Garlic Bread");
System.out.println("3.Stuffed Garlic Bread");
System.out.println("4.Hot Wings");
System.out.println("5.Chocolate Mousse");
System.out.println("6.Choco Lava Cake");
int l=j.nextInt();
System.out.println("Any Special Request, if yes then directly type it and if
no,just put a dash and press enter");
String m=a.nextLine();
}
else if(k.equalsIgnoreCase("salads"))
{
System.out.println("1.Ham Salad");
System.out.println("2.Insalata Caprese");
System.out.println("3.Israeli salad");
System.out.println("4.Jello salad");
int n=j.nextInt();
j.close();
Scanner o=new Scanner(System.in);
System.out.println("Any Special Request, if yes then directly type it and if
no,just put a dash and press enter");
String p=o.nextLine();
}
Scanner o=new Scanner(System.in);
System.out.println("Please name the beverage you want to drink");
String q=o.nextLine();
o.close();
}
ffoodcourt[0]=50*c+ffoodcourt[0];
Scanner o=new Scanner(System.in);
System.out.println("Do you want anything else");
String r=o.nextLine();
if(r.equalsIgnoreCase("yes"))
{
System.out.println("Please choose the option number");
System.out.println("1.Italian menu");
System.out.println("2.Main menu");
int s=o.nextInt();
if(s==1)
{
italian();
}
else if(s==2)
{
foodcourt();
}
else
{
System.out.println("Please choose a valid option number");
}
}
}
public static void burger()
{
System.out.println("\f");
Scanner a=new Scanner(System.in);
System.out.println("Hey, What Do you want to eat?.. Choose the option
number");
System.out.println("1.Bacon Cheese: 25$");
System.out.println("2.Classic HamBurger: 20$");
System.out.println("3.Veggie Burger: 15$");
System.out.println("4.Beetroot Burger: 18$");
System.out.println("5.Naughty Pig Burger: 30$");
System.out.println("6.Mixed Leaf Salad: 15$");
System.out.println("7.French Fries: 10$");
System.out.println("8.Sweet Potato Fries: 14$");
System.out.println("9.Beverages: 8$");
System.out.println("10.Combo Set: 50$");
int b=a.nextInt();
if(b==10)
{
System.out.println("\f");
System.out.println("\n"+"Choose a Burger, Choose the option number");
System.out.println("1.Bacon Cheese");
System.out.println("2.Classic HamBurger");
System.out.println("3.Veggie Burger");
System.out.println("4.Beetroot Burger");
System.out.println("5.Naughty Pig Burger");
int c=a.nextInt();
System.out.println("\n"+"Choose a Side, Choose the option number");
System.out.println("1.Mixed Leaf Salad");
System.out.println("2.French Fries");
System.out.println("3.Sweet Potato Fries");
int d=a.nextInt();
System.out.println("\n"+"Choose a Beverage, Choose the option number");
System.out.println("1.Lemon Iced Tea");
System.out.println("2.Fresh Lemonade");
System.out.println("3.Aerated Drinks");
int e=a.nextInt();
a.close();
if(e==3)
{
Scanner f=new Scanner(System.in);
System.out.println("Name the aerated drink");
String g=f.nextLine();
}
else if(e>3)
{
System.out.println("Please choose a valid option");
}
}
else
{
if(b==1)
{
Scanner h=new Scanner(System.in);
System.out.println("\n"+"How Many Burgers do you want");
int i=h.nextInt();
ffoodcourt[1]=i*25+ffoodcourt[1];
System.out.println("Thus, your order is: "+i+" Bacon cheese burgers");
}
if(b==2)
{
Scanner k=new Scanner(System.in);
System.out.println("\n"+"How Many Burgers do you want");
int l=k.nextInt();
ffoodcourt[1]=l*20+ffoodcourt[1];
System.out.println("Thus, your order is: "+l+" Classic Hamburger");
}
if(b==3)
{
Scanner n=new Scanner(System.in);
System.out.println("\n"+"How Many Burgers do you want");
int o=n.nextInt();
ffoodcourt[1]=o*15+ffoodcourt[1];
System.out.println("Thus, your order is: "+o+" Veggie Burger");
}
if(b==4)
{
Scanner q=new Scanner(System.in);
System.out.println("\n"+"How Many Burgers do you want");
int r=q.nextInt();
ffoodcourt[1]=r*20+ffoodcourt[1];
System.out.println("Thus, your order is: "+r+" Beetroot Burger");
}
if(b==5)
{
Scanner t=new Scanner(System.in);
System.out.println("\n"+"How Many Burgers do you want");
int u=t.nextInt();
ffoodcourt[1]=u*30+ffoodcourt[1];
System.out.println("Thus, your order is: "+u+" Naughty pig Burger");
}
if(b==6)
{
Scanner w=new Scanner(System.in);
System.out.println("\n"+"How Many Salads do you want/");
int x=w.nextInt();
ffoodcourt[1]=x*15+ffoodcourt[1];
System.out.println("Thus, your order is: "+x+" Mixed Leaf Salad");
}
if(b==7)
{
Scanner z=new Scanner(System.in);
System.out.println("\n"+"How Many French Fries do you want/");
int a1=z.nextInt();
ffoodcourt[1]=a1*10+ffoodcourt[1];
System.out.println("Thus, your order is: "+a1+" French Fries");
}
if(b==8)
{
Scanner c1=new Scanner(System.in);
System.out.println("\n"+"How Many Sweet potato fries do you want");
int d1=c1.nextInt();
ffoodcourt[1]=d1*14+ffoodcourt[1];
System.out.println("Thus, your order is: "+d1+" Sweet potato fries");
}
if(b==9)
{
Scanner f1=new Scanner(System.in);
System.out.println("Which Beverage you want? name it");
String g1=f1.nextLine();
System.out.println("\n"+"How Many "+g1+" do you want/");
int h1=f1.nextInt();
ffoodcourt[1]=h1*8+ffoodcourt[1];
System.out.println("Thus, your order is: "+h1+" "+g1);
}
}
Scanner j1=new Scanner(System.in);
System.out.println("Do you want anything else");
String k1=j1.nextLine();
if(k1.equalsIgnoreCase("yes"))
{
foodcourt();
}
}
public static void chinese()
{
System.out.println("\f");
