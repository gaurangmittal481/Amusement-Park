switch(b)
{
case 1:
System.out.println("Enter what you want(option number):");
System.out.println("1.Veg");
System.out.println("2.Non-veg");
int c=a.nextInt();
if(c==2)
{
Scanner d=new Scanner(System.in);
System.out.println("Please specify which meat do you want..");
String e=d.nextLine();
}
System.out.println("How many pieces do you want?");
System.out.println("One piece is for 2$");
