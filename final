}
if(bb[4]>0)
{
System.out.println(b[4]+"\t$"+bb[4]);
}
if(bb[5]>0)
{
System.out.println(b[5]+"\t$"+bb[5]);
}
if(bb[6]>0)
{
System.out.println(b[6]+"\t$"+bb[6]);
}
bb[7]=bb[0]+bb[1]+bb[2]+bb[3]+bb[4]+bb[5]+bb[6];
System.out.println("TOTAL"+"\t$"+bb[7]);
System.out.println("-----------------------------------------------------------------------------
------");
System.out.println("-----------------------------------------------------------------------------
------");
System.out.println("FOODCOURT");
if(ffoodcourt[0]>0)
{
System.out.println(foodcourt[0]+"\t$"+ffoodcourt[0]);
}
if(ffoodcourt[1]>0)
{
System.out.println(foodcourt[1]+"\t$"+ffoodcourt[1]);
}
if(ffoodcourt[2]>0)
{
System.out.println(foodcourt[2]+"\t$"+ffoodcourt[2]);
}
if(ffoodcourt[3]>0)
{
System.out.println(foodcourt[3]+"\t$"+ffoodcourt[3]);
}
if(ffoodcourt[4]>0)
{
System.out.println(foodcourt[4]+"\t$"+ffoodcourt[4]);
}
ffoodcourt[5]=ffoodcourt[0]+ffoodcourt[1]+ffoodcourt[2]+ffoodcourt[3]+ffoodcour
t[4];
System.out.println("TOTAL"+"\t$"+ffoodcourt[5]);
long total=aa[7]+bb[7]+ffoodcourt[5];
System.out.println("-----------------------------------------------------------------------------
------");
System.out.println("-----------------------------------------------------------------------------
------");
Scanner c=new Scanner(System.in);
System.out.println("TOTAL BILL");
System.out.println(a[7]+"\t"+aa[7]);
System.out.println(b[7]+"\t"+bb[7]);
System.out.println(foodcourt[5]+"\t"+ffoodcourt[5]);
System.out.println("Will that be cash or credit card?");
String z=c.nextLine();
if(z.equalsIgnoreCase("cash"))
{
System.out.println("Thank you for registering");
System.out.println("Wait for a while....");
try
{
Thread.sleep(1000);
{
System.out.println("Thank you for visiting");
}
}
catch(InterruptedException ex)
{
Thread.currentThread().interrupt();
}
System.exit(0);
}
else if(z.equalsIgnoreCase("credit card") || z.equalsIgnoreCase("creditcard"))
{
System.out.println("Enter the bank account details:");
System.out.println("Credit card Number:");
long a1=c.nextLong();
System.out.println("Enter the CVC code:");
long b1=c.nextLong();
System.out.println("Thank you for registering");
System.out.println("Wait for a while....");
try
{
Thread.sleep(1000);
{
System.out.println("Thank you for visiting");
}
}
catch(InterruptedException ex)
{
Thread.currentThread().interrupt();
}
}
System.exit(0);
}
